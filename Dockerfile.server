# Bun monorepo server (JIT - no build step)
FROM oven/bun:1-alpine
WORKDIR /app

# Copy everything (client excluded via .dockerignore)
COPY . .

# Install all workspace deps (simpler than filtering)
RUN bun install --frozen-lockfile --production --filter '!client' --filter '!infrastructure'

RUN mkdir -p /app/data && chown bun:bun /app/data

USER bun
ENV NODE_ENV=production
EXPOSE 3000

CMD ["bun", "run", "server/src/index.ts"]
