# Bun monorepo server (JIT - no build step)
FROM oven/bun:1-alpine
WORKDIR /app

# Copy everything (client excluded via .dockerignore)
COPY . .

# Install all workspace deps (simpler than filtering)
RUN bun install --frozen-lockfile --production --filter '!demo-bank-client' --filter '!infrastructure'

RUN mkdir -p /app/data && chown bun:bun /app/data

USER bun
ENV NODE_ENV=production
EXPOSE 53913

CMD ["bun", "run", "usecases/demo-bank/server/src/index.ts"]
