{
	"name": "vidos-usecase-demos",
	"version": "0.0.1",
	"description": "A collection of demos showcasing the use of Vidos in various use cases.",
	"license": "MIT",
	"packageManager": "bun@1.2.4",
	"workspaces": [
		"./usecases/**/*",
		"./usecases-home",
		"./infrastructure"
	],
	"scripts": {
		"generate-api": "turbo generate-api",
		"dev": "turbo dev",
		"build": "turbo build",
		"dev:demo-bank-client": "turbo dev --filter=demo-bank-client",
		"dev:demo-bank-server": "turbo dev --filter=demo-bank-server",
		"build:demo-bank-client": "turbo build --filter=demo-bank-client",
		"build:infrastructure": "turbo build --filter=infrastructure",
		"lint": "biome lint .",
		"format": "biome format . --write",
		"check-types": "turbo check-types",
		"test": "turbo test"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.0",
		"@types/bun": "latest",
		"drizzle-kit": "^0.31.9",
		"turbo": "^2.8.9",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"hono": "^4.11.9"
	}
}