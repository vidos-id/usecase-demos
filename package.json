{
	"name": "vidos-usecase-demos",
	"version": "0.0.1",
	"description": "A collection of demos showcasing the use of Vidos in various use cases.",
	"license": "MIT",
	"packageManager": "bun@1.2.4",
	"workspaces": [
		"./server",
		"./client",
		"./shared"
	],
	"scripts": {
		"dev": "turbo dev",
		"dev:client": "turbo dev --filter=client",
		"dev:server": "turbo dev --filter=server",
		"build": "turbo build",
		"build:client": "turbo build --filter=client",
		"build:server": "turbo build --filter=server",
		"lint": "biome lint .",
		"type-check": "turbo type-check",
		"test": "turbo test",
		"postinstall": "turbo build --filter=shared --filter=server",
		"format": "biome format . --write"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"bun-types": "1.3.9",
		"turbo": "^2.8.5",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"hono": "^4.11.9"
	}
}