{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"generate-api": {
			"dependsOn": ["^generate-api"],
			"inputs": ["**/*.yaml", "**/*.yml", "package.json"],
			"outputs": ["src/generated/**"]
		},
		"db:generate": {
			"dependsOn": ["^db:generate"],
			"inputs": ["drizzle.config.ts", "src/db/**/*.ts", "package.json"],
			"outputs": ["src/db/generated/**"]
		},
		"build": {
			"dependsOn": ["^check-types"],
			"inputs": [
				"src/**/*.ts",
				"src/**/*.tsx",
				"src/**/*.js",
				"src/**/*.jsx",
				"src/**/*.json",
				"tsconfig.json",
				"tsconfig.*.json",
				"vite.config.ts",
				"package.json",
				"bun.lock",
				"index.html"
			],
			"outputs": ["dist/**", "build/**", ".turbo/**"],
			"env": ["NODE_ENV", "VITE_*"]
		},
		"check-types": {
			"dependsOn": ["^check-types"],
			"inputs": [
				"src/**/*.ts",
				"src/**/*.tsx",
				"src/**/*.d.ts",
				"tsconfig.json",
				"tsconfig.*.json",
				"package.json"
			],
			"outputs": []
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"env": ["NODE_ENV", "PORT", "VITE_*"]
		},
		"lint": {
			"inputs": [
				"src/**/*.ts",
				"src/**/*.tsx",
				"src/**/*.js",
				"src/**/*.jsx",
				"package.json",
				"tsconfig.json",
				"tsconfig.*.json"
			],
			"outputs": []
		},
		"test": {
			"dependsOn": ["^check-types"],
			"inputs": [
				"src/**/*.ts",
				"src/**/*.tsx",
				"test/**/*.ts",
				"test/**/*.tsx",
				"**/*.test.ts",
				"**/*.test.tsx",
				"**/*.spec.ts",
				"**/*.spec.tsx",
				"vitest.config.*",
				"package.json",
				"tsconfig.json",
				"tsconfig.*.json"
			],
			"outputs": ["coverage/**"],
			"env": ["NODE_ENV", "CI"]
		}
	},
	"globalDependencies": [
		"**/.env",
		"**/.env.*",
		"**/.env.local",
		"turbo.json",
		"package.json",
		"bun.lock",
		"tsconfig.json"
	],
	"globalEnv": ["NODE_ENV", "CI"]
}
